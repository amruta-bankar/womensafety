<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Border (Blue) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3"/>  <!-- Blue Border -->
            <corners android:radius="12dp"/>  <!-- Rounded Corners -->
        </shape>
    </item>

    <!-- Inner Background Gradient (Shifted to Create Border Effect) -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#64B5F6"
            android:endColor="#1E88E5"
            android:type="linear"/>
            <corners android:radius="10dp"/> <!-- Slightly Smaller Corners -->
        </shape>
    </item>

</layer-list>
